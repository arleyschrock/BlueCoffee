<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="ElectricBlobs" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-01.2.3">
  <WorkerRole name="Spark" vmsize="Large">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InternalEndpoint name="All" protocol="any" />
      <InternalEndpoint name="Master" protocol="tcp" port="8081" />
    </Endpoints>
    <LocalResources>
      <LocalStorage name="InstallDirectory" cleanOnRoleRecycle="true" sizeInMB="10240" />
    </LocalResources>
    <Startup>
      <Task commandLine="AllowAllPorts.cmd" executionContext="elevated"/>
    </Startup>
  </WorkerRole>
  <WorkerRole name="Shark" vmsize="Large">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InternalEndpoint name="All" protocol="any" />
      <InputEndpoint name="Shark" protocol="tcp" port="8082" localPort="8082" />
    </Endpoints>
    <LocalResources>
      <LocalStorage name="InstallDirectory" cleanOnRoleRecycle="true" sizeInMB="10240" />
    </LocalResources>
    <Startup>
      <Task commandLine="AllowAllPorts.cmd" executionContext="elevated"/>
    </Startup>
  </WorkerRole>
  <WorkerRole name="HiveMetastore" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InternalEndpoint name="Thrift" protocol="tcp" port="9083" />
    </Endpoints>
    <LocalResources>
      <LocalStorage name="DataDirectory" cleanOnRoleRecycle="false" sizeInMB="10240" />
      <LocalStorage name="InstallDirectory" cleanOnRoleRecycle="true" sizeInMB="10240" />
    </LocalResources>
  </WorkerRole>
</ServiceDefinition>