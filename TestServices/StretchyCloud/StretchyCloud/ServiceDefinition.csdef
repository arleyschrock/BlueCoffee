<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="StretchyCloud" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2014-01.2.3">
  <WorkerRole name="ElasticSearch" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InternalEndpoint name="NodeComm" protocol="tcp" port="9300" />
      <InternalEndpoint name="Http" protocol="tcp" port="9200" />
    </Endpoints>
    <LocalResources>
      <LocalStorage name="InstallDir" cleanOnRoleRecycle="true" sizeInMB="256" />
      <LocalStorage name="DataDir" cleanOnRoleRecycle="false" sizeInMB="1024" />
    </LocalResources>
  </WorkerRole>
  <WorkerRole name="Indexer" vmsize="Small">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WorkerRole>
  <WebRole name="Frontend" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
  </WebRole>
</ServiceDefinition>